#: kivy 1.11.1

#: include views/homescreen.kv
#: include views/loginscreen.kv
#: include views/newlogscreen.kv
#: include views/welcomescreen.kv

<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    back_color: (1, 0, 1, 1)
    border_radius: [16]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

<ImageButton@ButtonBehavior+Image>
    source: None

GridLayout:
    cols: 1

    ScreenManager:
        id: screen_manager
        WelcomeScreen:
            name: "welcome_screen"
            id: welcome_screen
        LoginScreen:
            name: "login_screen"
            id: login_screen
        HomeScreen:
            name: "home_screen"
            id: home_screen
        NewLogScreen:
            name: "new_log_screen"
            id: new_log_screen
