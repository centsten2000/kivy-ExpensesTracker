#:import hex kivy.utils.get_color_from_hex

<Label>
    font_name: 'assets/fonts/Poppins-Regular.ttf'
    color: hex('#32270B')

<Button>
    background_normal: ''
    background_down: ''
    color: hex('#FDFDFD')

<HomeScreen>:

    user_name: user_name
    accounts_slider: accounts_slider
    today: today
    time_period: time_period


    FloatLayout:
        size: root.width, root.height

        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "assets/img/background.png"

        # Top float
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.5013, 0.08
            pos_hint: {"x": 0, "top": 0.93}
            padding: [48, 16, 48, 16]

            canvas:
                Color:
                    rgba: hex('#FDFDFD')
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [(0, 0), (24, 24), (24, 24), (0, 0)]

            Label:
                id: today
                text: ''
                font_name: 'assets/fonts/Poppins-Regular.ttf'
                text_size: self.size
                font_size: ('10sp')
                halign: 'left'

            Label:
                id: user_name
                text: ''
                text_size: self.size
                font_size: ('18sp')
                halign: 'left'

        BoxLayout:
            size_hint: 0.15, 0.08
            pos_hint: {"right": 1, "top": 0.93}

            canvas:
                Color:
                    rgba: hex('#FDFDFD')
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [(24,24), (0, 0), (0, 0), (24, 24)]

            ImageButton:
                source: 'assets/img/settings.png'
                size: self.texture_size


        # Middle slider
        BoxLayout:
            pos_hint: {'top': 0.82}
            size_hint: 1, 0.18

            ScrollView:
                do_scroll_x: True
                do_scroll_y: False

                GridLayout:
                    id: accounts_slider
                    size_hint_x: None
                    rows: 1
                    col_default_width: root.width * 0.32
                    width: self.minimum_width
                    spacing: 36
                    padding: [36, 0]


        # Bottom box layout
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.6
            pos_hint: {"x": 0, "y": 0}
            padding: [24, 48]

            canvas:
                Color:
                    rgba: hex('#FDFDFD')
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [(48, 48), (48, 48), (0, 0), (0, 0)]

            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, 0.095
                spacing: 24
                padding: [16, 0]

                Label:
                    text: 'ACTIVITY'
                    font_name: 'assets/fonts/Anton-Regular.ttf'
                    font_size: ('24sp')
                    text_size: self.size
                    halign: 'left'

                BorderedButton:
                    text: 'history'
                    font_name: 'assets/fonts/Anton-Regular.ttf'
                    font_size: ('14sp')
                    size_hint: 0.3, 1
                    color: hex('#C0E1DD')

            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, 0.15

                ImageButton:
                    source: 'assets/img/Back.png'
                    size_hint: (0.1, 1)
                    size: self.texture_size

                Label:
                    id: time_period
                    text: ''
                    size_hint: 1, 1
                    font_size: ('14sp')
                    font_name: 'assets/fonts/Poppins-Bold.ttf'

                ImageButton:
                    source: 'assets/img/Right.png'
                    size_hint: (0.1, 1)
                    size: self.texture_size

            BoxLayout:
                orientation: "vertical"
                size_hint: 1, 1
